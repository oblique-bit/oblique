{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": false
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "oblique-styles": {
      "root": "",
      "sourceRoot": "projects/oblique/src/styles",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "projects/oblique/styles/css",
            "tsConfig": "projects/stylesBuilder/tsconfig.styles.json",
            "main": "projects/stylesBuilder/main.ts",
            "index": "projects/stylesBuilder/index.html",
            "styles": [
              {
                "input": "projects/oblique/src/styles/scss/oblique-core.scss",
                "inject": false
              },
              {
                "input": "projects/oblique/src/styles/scss/oblique-alert.scss",
                "inject": false
              },
              {
                "input": "projects/oblique/src/styles/scss/oblique-icons.scss",
                "inject": false
              },
              {
                "input": "projects/stylesBuilder/oblique-components.scss",
                "inject": false
              }
            ]
          }
        }
      }
    },
    "oblique": {
      "root": "projects/oblique",
      "sourceRoot": "projects/oblique/src",
      "projectType": "library",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/oblique/tsconfig.lib.json",
            "project": "projects/oblique/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "no-cache": ["true"],
            "run-in-band": ["true"]
          },
          "configurations": {
            "development": {
              "configPath": "jest.config.js"
            },
            "production": {
              "configPath": "jest.config.prod.js"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "sandbox": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/sandbox",
      "sourceRoot": "projects/sandbox/src",
      "prefix": "sb",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "allowedCommonJsDependencies": ["ajv", "ajv-formats"],
            "outputPath": "dist/sandbox",
            "index": "projects/sandbox/src/index.html",
            "main": "projects/sandbox/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/sandbox/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/sandbox/src/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "projects/oblique/src/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "projects/oblique/src/styles/fonts",
                "output": "/assets/fonts"
              }
            ],
            "styles": [
              "projects/oblique/src/styles/scss/oblique-core.scss",
              {
                "input": "projects/oblique/src/styles/css/frutiger.css",
                "inject": false
              },
              {
                "input": "projects/oblique/src/styles/css/roboto.css",
                "inject": false
              },
              "projects/oblique/src/styles/scss/oblique-icons.scss",
              "projects/oblique/src/styles/scss/oblique-alert.scss",
              "projects/sandbox/src/scss/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "projects/oblique/src/styles/scss/core",
                "projects/oblique/src/styles/scss/core/mixins"
              ]
            },
            "scripts": ["projects/oblique/src/ob-features.js"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "3mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "18kb",
                  "maximumError": "18kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/sandbox/src/environments/environment.ts",
                  "with": "projects/sandbox/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 3001
          },
          "configurations": {
            "production": {
              "browserTarget": "sandbox:build:production"
            },
            "development": {
              "browserTarget": "sandbox:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "jest.config.js",
            "tsConfig": "tsconfig.spec.json",
            "no-cache": ["true"],
            "run-in-band": ["true"]
          }
        }
      }
    },
    "sds": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "prefix": "app"
        },
        "@schematics/angular:directive": {
          "prefix": "app"
        }
      },
      "root": "projects/sds",
      "sourceRoot": "projects/sds/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/sds/public",
            "index": "projects/sds/src/index.html",
            "main": "projects/sds/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/sds/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/sds/src/assets",
                "output": "/assets"
              },
              {
                "glob": "**/*",
                "input": "projects/oblique/src/assets",
                "output": "/assets"
              },
              {
                "glob": "*headers.conf",
                "input": "projects/sds/src/nginx",
                "output": "./../nginx/conf/includes"
              },
              {
                "glob": "Staticfile",
                "input": "projects/sds/src/nginx",
                "output": "./.."
              }
            ],
            "styles": [
              "projects/oblique/src/styles/scss/oblique-core.scss",
              {
                "input": "projects/oblique/src/styles/css/frutiger.css",
                "inject": false
              },
              "projects/sds/src/styles/styles.scss",
              "node_modules/highlight.js/styles/sunburst.css"
            ],
            "scripts": ["projects/oblique/src/ob-features.js"]
          },
          "configurations": {
            "production": {
              "optimization": {
                "styles": {
                  "inlineCritical": false
                }
              },
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "3.5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "18kb",
                  "maximumError": "18kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 4200
          },
          "configurations": {
            "production": {
              "browserTarget": "sds:build:production"
            },
            "development": {
              "browserTarget": "sds:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "jest.config.js",
            "tsConfig": "tsconfig.spec.json",
            "no-cache": ["true"],
            "run-in-band": ["true"]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "skipTests": false,
      "inlineTemplate": false,
      "prefix": "ob",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "ob"
    },
    "@angular-eslint/schematics:application": {
      "setParserOptionsProject": true
    },
    "@angular-eslint/schematics:library": {
      "setParserOptionsProject": true
    }
  }
}
