{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/ob-tour",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": ["src/lib/styles"]
  },
  "assets": [
    {
      "input": "src/assets",
      "glob": "**/*",
      "output": "assets"
    },
    "README.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "allowedNonPeerDependencies": ["@schematics/angular", "ansi-colors"]
}
