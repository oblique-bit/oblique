{
  "name": "@oblique/design-system",
  "version": "13.3.0",
  "scripts": {
    "lint": "ts-node scripts/lint.ts",
    "format": "ts-node scripts/lint.ts --fix",
    "test": "cd ../.. && ng test design-system",
    "test-ci": "cd ../.. && ng run design-system:test:ci",
    "build": "ng build design-system && ts-node scripts/post-build.ts",
    "release": "ts-node scripts/release.ts",
    "check:plural-references": "python3 scripts-custom/detect-plural-references.py",
    "check:token-syntax": "python3 scripts-custom/validate-token-syntax.py",
    "check:token-consumption": "python3 scripts-custom/validate-consumption-hierarchy.py",
    "recommend": "python3 scripts-custom/recommend-scripts.py --interactive",
    "recommend:plan": "python3 scripts-custom/recommend-scripts.py --plan",
    "recommend:done": "python3 scripts-custom/recommend-scripts.py --done",
    "recommend:auto": "python3 scripts-custom/recommend-scripts.py --auto",
    "validate:quick": "python3 scripts-custom/quick-validate.py",
    "track:token-changes": "python3 scripts-custom/track-token-changes.py --manual",
    "validate:all": "node scripts-custom/validate-all.js",
    "validate:components": "node scripts-custom/validate-all-components.js",
    "setup:style-dictionary": "node scripts-custom/setup-style-dictionary.js",
    "docs:validate-structure": "node scripts-custom/validate-documentation-structure.js",
    "trace-token": "node scripts-custom/trace-token-references.js",
    "search-tokens": "node scripts-custom/trace-token-references.js --search",
    "trace-figma": "node scripts-custom/trace-token-references.js --figma",

    "tokens:build": "style-dictionary build --config style-dictionary.config.js",
    "tokens:clean": "style-dictionary clean",
    "validate:tokens-build": "npm run tokens:build && echo 'âœ… Style Dictionary build successful'",
    "validate:pre-handoff": "node scripts-custom/validate-pre-handoff.js",
    "validate:pre-handoff:fix": "node scripts-custom/validate-pre-handoff.js --fix",
    "validate:handoff-quick": "node scripts-custom/validate-handoff-quick.js",
    "check": "npm run validate:tokens-build"
  },
  "peerDependencies": {
    "@angular/cdk": "^19.0.0 || ^20.0.0",
    "@angular/common": "^19.0.0 || ^20.0.0",
    "@angular/core": "^19.0.0 || ^20.0.0",
    "@angular/material": "^19.0.0 || ^20.0.0",
    "@ngx-translate/core": "^16.0.0"
  },
  "devDependencies": {
    "glob": "^11.0.3",
    "ng-packagr": "^19.2.2",
    "style-dictionary": "^5.1.1"
  },
  "sideEffects": false
}
