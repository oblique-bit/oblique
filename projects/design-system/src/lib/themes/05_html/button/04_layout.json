{
  "ob": {
    "h": {
      "button": {
        "label_icon": {
          "spacing": {
            "padding": {
              "vertical": {
                "$type": "spacing",
                "$value": "{ob.s.dimension.dynamic.element.sm.rem}"
              },
              "horizontal": {
                "$type": "spacing",
                "$value": "{ob.s.dimension.dynamic.element.xl.rem}"
              }
            },
            "gap": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.dynamic.element.sm.rem}"
            }
          },
          "container": {
            "size": {
              "min_height": {
                "$type": "sizing",
                "$value": "{ob.s.dimension.dynamic.spacing.md.rem}"
              }
            }
          },
          "icon_size": {
            "$type": "sizing",
            "$value": "{ob.s.dimension.static.spacing.md.rem}",
            "$description": "Standard proportional size of the icon inside the label_icon button subcomponent."
          }
        },
        "icon_only": {
          "spacing": {
            "padding": {
              "vertical": {
                "$type": "spacing",
                "$value": "{ob.s.dimension.dynamic.element.sm.rem}"
              },
              "horizontal": {
                "$type": "spacing",
                "$value": "{ob.s.dimension.dynamic.element.sm.rem}"
              }
            }
          }
        },
        "remove": {
          "spacing": {
            "padding": {
              "vertical": {
                "$type": "spacing",
                "$value": "{ob.s.dimension.static.none.rem}",
                "$description": "Remove button requires zero padding."
              },
              "horizontal": {
                "$type": "spacing",
                "$value": "{ob.s.dimension.static.none.rem}",
                "$description": "Remove button requires zero padding."
              }
            }
          }
        },
        "border_radius": {
          "$type": "borderRadius",
          "$value": "{ob.s.border_radius.sm}",
          "$description": "Standard border radius for button-aug components - consistent across all sizes"
        },
        "direction": {
          "row": {
            "layout": {
              "direction": {
                "$type": "text",
                "$value": "row",
                "$description": "Horizontal flex direction"
              },
              "flex_wrap": {
                "$type": "text",
                "$value": "wrap",
                "$description": "Allow wrapping when space insufficient"
              },
              "align_items": {
                "$type": "text",
                "$value": "center",
                "$description": "Center alignment for horizontal layout"
              }
            },
            "button_order": {
              "primary_first": {
                "$type": "text",
                "$value": "flex-start",
                "$description": "Primary button positioned first (left-aligned)"
              },
              "primary_last": {
                "$type": "text",
                "$value": "flex-end",
                "$description": "Primary button positioned last (right-aligned)"
              }
            }
          },
          "column": {
            "layout": {
              "direction": {
                "$type": "text",
                "$value": "column",
                "$description": "Vertical flex direction"
              },
              "align_items": {
                "$type": "text",
                "$value": "stretch",
                "$description": "Full-width buttons for better touch targets"
              }
            },
            "button_order": {
              "primary_first": {
                "$type": "text",
                "$value": "normal",
                "$description": "Primary button positioned first in column"
              },
              "primary_last": {
                "$type": "text",
                "$value": "column-reverse",
                "$description": "Primary button positioned last in column"
              }
            },
            "button_width": {
              "$type": "text",
              "$value": "100%",
              "$description": "Full-width buttons in column layout"
            }
          }
        },
        "border_width": {
          "$type": "borderWidth",
          "$value": "{ob.s.border_width.xs}",
          "$description": "Tinest border width possible for buttons for aesthetics and functionality: differentiation between secondary and tertiary. Static token, not reacting on changing component-size modes."
        },
        "icon": {
          "size": {
            "$type": "sizing",
            "$value": "{ob.s.dimension.static.spacing.md.rem}"
          }
        }
      }
    }
  }
}