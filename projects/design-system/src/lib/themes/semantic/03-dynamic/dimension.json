{
  "size": {
    "xs": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 0.5",
      "$description": "Extra small component size - Calculated: 4px × 1.0 × 1.0 × 0.5 = 2px"
    },
    "sm": {
      "$type": "dimension", 
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 0.75",
      "$description": "Small component size - Calculated: 4px × 1.0 × 1.0 × 0.75 = 3px"
    },
    "md": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier}",
      "$description": "Medium component size - Calculated: 4px × 1.0 × 1.0 = 4px"
    },
    "lg": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 1.5",
      "$description": "Large component size - Calculated: 4px × 1.0 × 1.0 × 1.5 = 6px"
    },
      "xl": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 2",
      "$description": "Extra large component size - Calculated: 4px × 1.0 × 1.0 × 2 = 8px"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 3",
      "$description": "Double extra large component size - Calculated: 4px × 1.0 × 1.0 × 3 = 12px"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 4",
      "$description": "Triple extra large component size - Calculated: 4px × 1.0 × 1.0 × 4 = 16px"
    }
  },
  "minTarget": {
    "touch": {
      "$type": "dimension",
      "$value": "{ob.p.size._base} * {global.02-multipliers.dimension.md.multiplier} * {global.02-multipliers.viewport.desktop.multiplier} * 11",
      "$description": "Minimum touch target size - Calculated: 4px × 1.0 × 1.0 × 11 = 44px"
    }
  }
}
