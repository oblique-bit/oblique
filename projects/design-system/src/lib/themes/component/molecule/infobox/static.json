{
  "ob": {
    "c": {
      "infobox": {
        "container": {
          "padding_bottom": {
            "$type": "spacing",
            "$value": "{ob.s.dimension.static.container.xs.px}",
            "$description": "Needed to extend the padding in the Infobox component, ensuring consistent and visually appealing spacing to the right and below the button."
          }
        },
        "icon": {
          "asset": {
            "status": {
              "info": {
                "$type": "asset",
                "$value": "InfoCircle"
              },
              "warning": {
                "$type": "asset",
                "$value": "WarningTriangle"
              },
              "error": {
                "$type": "asset",
                "$value": "WarningCircle"
              },
              "success": {
                "$type": "asset",
                "$value": "CheckmarkCircle"
              },
              "fatal": {
                "$type": "asset",
                "$value": "Error-new",
                "$description": "This icon is not yet part of the official icon set. It has to be drawn by F.Gabsa team in Illustrator."
              }
            }
          }
        },
        "border_radius": {
          "top_left": {
            "$type": "borderRadius",
            "$value": "{ob.s.radius.none}",
            "$description": "Sets the left upper corner radius to zero because there we have a left colored border and no need for rounded corners."
          },
          "top_right": {
            "$type": "borderRadius",
            "$value": "{ob.s.radius.md}",
            "$description": "Rounds the right upper corner to enhance visual appeal of the component."
          },
          "bottom_left": {
            "$type": "borderRadius",
            "$value": "{ob.s.radius.none}",
            "$description": "Sets the left upper corner radius to zero because there we have a left colored border and no need for rounded corners."
          },
          "bottom_right": {
            "$type": "borderRadius",
            "$value": "{ob.s.radius.md}",
            "$description": "Rounds the right bottom corner to enhance visual appeal of the component."
          }
        },
        "typography": {
          "title": {
            "$type": "typography",
            "$value": "{ob.s.typography.scale.static.md.strong}",
            "$description": "The message is in a bold font weight to build visual contrast and emphasize the hierarchy."
          },
          "body": {
            "$type": "typography",
            "$value": "{ob.s.typography.content.body.normal}",
            "$description": "The message is in a medium font weight to build visual contrast and emphasize the hierarchy in case the title is present."
          }
        },
        "fatal": {
          "button": {
            "inversity": {
              "$type": "text",
              "$value": "flipped"
            }
          }
        },
        "info": {
          "button": {
            "inversity": {
              "$type": "text",
              "$value": "normal"
            }
          }
        },
        "resolved": {
          "button": {
            "inversity": {
              "$type": "text",
              "$value": "normal"
            }
          }
        },
        "attention": {
          "button": {
            "inversity": {
              "$type": "text",
              "$value": "normal"
            }
          }
        },
        "critical": {
          "button": {
            "inversity": {
              "$type": "text",
              "$value": "normal"
            }
          }
        }
      }
    }
  }
}