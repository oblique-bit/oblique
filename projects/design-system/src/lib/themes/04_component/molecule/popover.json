{
  "ob": {
    "c": {
      "popover": {
        "spacing": {
          "padded_container": {
            "padding_top": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.sm.px}",
              "$description": "Top and right padding have to be the same so the position of the close button is visually apealing."
            },
            "padding_right": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.sm.px}",
              "$description": "Top and right padding have to be the same so the position of the close button is visually apealing."
            },
            "padding_bottom": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.sm.px}",
              "$description": "Enhances readability and visual appeal, preventing the text from appearing cramped and ensuring clarity."
            },
            "padding_left": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.sm.px}",
              "$description": "Enhances readability and visual appeal, preventing the text from appearing cramped and ensuring clarity."
            },
            "row_gap": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.element.xs.px}",
              "$description": "Sets a minimum vertical gap between container_top and container-buttons to enhance the readability."
            }
          },
          "text_bar": {
            "col_gap": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.xs.px}",
              "$description": "Prevents the title coming to close to the Close button (X)"
            },
            "padding_bottom": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.xs.px}"
            }
          },
          "text_variant_container": {
            "padding_top": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.detail.xs.px}",
              "$description": "Aligns the title with the status icon and the close button on desktop."
            }
          },
          "buttons_container": {
            "margin_top": {
              "$type": "spacing",
              "$value": "{ob.s.dimension.static.surface.xs.px}",
              "$description": "Proper proximity from the buttons to text above. We were not able to use gap property in the padded container since it increases the gap between the title and the body as well."
            }
          }
        },
        "sizing": {
          "custom_buttons_container": {
            "width": {
              "$type": "dimension",
              "$value": "{ob.s.dimension.dynamic.layout.xl.px}"
            }
          },
          "custom_buttons": {
            "min_width": {
              "$type": "dimension",
              "$value": "{ob.s.dimension.dynamic.container.md.px}"
            }
          },
          "padded_container": {
            "width": {
              "$type": "dimension",
              "$value": "{ob.s.dimension.dynamic.layout.xl.px}",
              "$description": "Sets a fixed default width (320px) for popover consistency. Can be overridden for specific requirements."
            }
          },
          "close_button": {
            "width": {
              "$type": "dimension",
              "$value": "{ob.s.dimension.dynamic.surface.sm.px}"
            }
          },
          "text_variant_container": {
            "min_height": {
              "$type": "dimension",
              "$value": "{ob.s.dimension.dynamic.surface.md.px}"
            }
          }
        },
        "color": {
          "bg": {
            "$type": "color",
            "$value": "{ob.s3.color.neutral.bg.contrast_highest.inversity_normal}",
            "$description": "Default background color for popovers."
          },
          "border": {
            "$type": "color",
            "$value": "{ob.s3.color.neutral.border.strong.inversity_normal}",
            "$description": "Default border color for popovers."
          },
          "fg": {
            "$type": "color",
            "$value": "{ob.s3.color.neutral.fg.contrast_highest.inversity_normal}",
            "$description": "Default foreground color for popovers."
          }
        },
        "typography": {
          "custom_buttons_label": {
            "$type": "typography",
            "$value": "{ob.s.typography.grouped.static.xs.normal}",
            "$description": "Text labels for custom buttons in Service Navigation e.g. on ePortal."
          },
          "text": {
            "$type": "typography",
            "$value": "{ob.s.typography.grouped.static.sm.normal}"
          },
          "title": {
            "$type": "typography",
            "$value": "{ob.s.typography.grouped.static.sm.strong}"
          }
        },
        "border_radius": {
          "$type": "borderRadius",
          "$value": "{ob.s.border_radius.lg}",
          "$description": "Sets default border radius for Popover."
        },
        "border_width": {
          "$type": "borderWidth",
          "$value": "{ob.s.border_width.xs}",
          "$description": "Sets the border width of the popover's surface."
        }
      }
    }
  }
}