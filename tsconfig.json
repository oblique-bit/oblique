{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom"],
    "useUnknownInCatchVariables": true,
    "paths": {
      "@oblique/oblique": ["projects/oblique/src/public_api"],
      "@oblique/*": ["projects/oblique/src/lib/*"],
      "@oblique/design-system": ["projects/design-system/src/public-api"]
    },
    "resolveJsonModule": true,
    "useDefineForClassFields": false
  }
}
