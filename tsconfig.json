{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "importHelpers": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom"],
    "paths": {
      "@oblique/oblique": ["projects/oblique/src/public_api"],
      "@oblique/*": ["projects/oblique/src/lib/*"]
    },
    "resolveJsonModule": true
  }
}
